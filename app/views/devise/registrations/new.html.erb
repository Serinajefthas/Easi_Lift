<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <br/>
  <div class="fiel form-groupd">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <br/>
  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", class: "form-control" %>
  </div>

  <div class="field form-group"><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "form-control" %>
  </div>

  <br/>
  <div class="actions">
    <br/>
    <%= f.submit "Sign up", class:"btn btn-secondary btn-sm"%>
  </div>
  <br/>
<% end %>

<%= render "devise/shared/links" %>
