<%= form_with(model: lift) do |form| %>
  <% if lift.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(lift.errors.count, "error") %> prohibited this lift from being saved:</h2>

      <ul>
        <% lift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% form.label :driver_name, style: "display: block" %>
    <%= form.text_field :driver_name, required: true, class:"form-control", placeholder:"Driver's name" %>
    <br />  
  </div>

  <div class="form-group">
    <%= form.date_field :date, required: true, class:"form-control", placeholder:"Date" %>
    <br />
  </div>

  <div class="form-group">
    <%= form.time_field :time, required: true, class:"form-control", placeholder:"Time" %>
    <br />
  </div>

  <div class="form-group">
    <%= form.text_field :start_location, required: true, class:"form-control", placeholder:"Start location" %>
    <br />
  </div>

  <div class="form-group">
    <%= form.text_field :destination, required: true, class:"form-control", placeholder:"Destination" %>
    <br />
  </div>

  <div class="form-group">
    <%= form.text_field :cost, required: true, class:"form-control", placeholder:"Cost" %>
    <br />
  </div>

  <div class="form-group">
    <%= form.text_field :contact_number, required: true, class:"form-control", placeholder:"Contact number" %>
    <br><br/>
  </div>

  <div class=" field form-group">
    <%= form.number_field :user_id, id: :lift_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    <br />
  </div>

  <div>

    <%= form.submit class: "btn btn-dark"%>
    <br>
  </div>
<% end %>
