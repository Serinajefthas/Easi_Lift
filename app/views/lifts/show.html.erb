<p style="color: green"><%= notice %></p>

<div class="container-fluid text-sm-left p-5 bg-light">
  <h3 class="display-3">
		<%= @lift.driver_name %>
	</h3>
	<p class="lead">
		<strong>Date:  </strong><%= @lift.date %><br>
		<strong>Time:  </strong><%= @lift.time %><br>
		<strong>Start location:  </strong><%= @lift.start_location %><br>
		<strong>Destination:  </strong><%= @lift.destination %><br>
		<strong>Cost:  </strong><%= @lift.cost %>
		<strong>Contact number:  </strong><%= @lift.contact_number %>
	</p>
	<div>
		<br><%= link_to "Edit", edit_lift_path(@lift), class: "btn btn-secondary" %>
		<%= link_to "Back", lifts_path, class: "btn btn-secondary" %><br/>

		<br><%= link_to "Destroy this lift", @lift, method: :delete, class: "btn btn-secondary"  %>
	</div>
</div>
