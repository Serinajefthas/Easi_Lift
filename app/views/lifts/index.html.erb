<p style="color: green"><%= notice %></p>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Driver name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Start location</th>
      <th>Destination</th>
      <th>Cost</th>
      <th>Contact number</th>
      <th>&nbsp</th> <!-- Empty headers for actions column -->
      <th>&nbsp</th>
      <th>&nbsp</th>
    </tr>
  </thead>

  <tbody>   
    <% @lifts.each do |lift| %>
      <tr>
        <td><%= lift.driver_name %></td>
        <td><%= lift.date %></td>
        <td><%= lift.time %></td>
        <td><%= lift.start_location %></td>
        <td><%= lift.destination %></td>
        <td><%= lift.cost %></td>
        <td><%= lift.contact_number %></td>
        <td>
          <%= link_to "Show", lift%>
        </td>
        <td>
          <%= link_to "Edit", edit_lift_path(lift) %>
        </td>
        <td>
          <%= link_to "Delete", lift, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to "Add new lift", new_lift_path, class: "btn btn-success" %>
